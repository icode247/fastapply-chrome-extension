{
  "manifest_version": 3,
  "name": "FastApply - Free AI Automated Job Application Copilot",
  "version": "1.2",
  "permissions": [
    "windows",
    "cookies"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://*.indeed.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "http://localhost:3000/*/*",
      "https://fastapply-adbs.vercel.app/*",
      "https://fastapply-adbs.vercel.app/*/*"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.indeed.com/*.",
        "https://www.linkedin.com/*",
        "https://www.linkedin.com/*/*"
      ],
      "js": [
        "scripts/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {},
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "790": "icons/logo.png"
  }
}