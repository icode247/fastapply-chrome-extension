{
  "manifest_version": 3,
  "name": "LinkedIn Job Automation",
  "version": "1.0",
  "description": "Automates job application process on LinkedIn",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "windows",
    "cookies"
  ],
  "host_permissions": ["https://www.linkedin.com/*", "https://*.indeed.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": ["http://localhost:3000/*", "http://localhost:3000/*/*"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.indeed.com/*.",
        "https://www.linkedin.com/*",
        "https://www.linkedin.com/*/*"
      ],
      "js": ["scripts/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["maximized.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png",
      "790": "icons/logo.png"
    }
  },

  "options_page": "option/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "790": "icons/logo.png"
  }
}
